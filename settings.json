{
  // General {{{

  "workbench.startupEditor": "welcomePageInEmptyWorkbench",

  // Fonts

  // "editor.fontSize": 13,
  // "terminal.integrated.fontSize": 13,
  // "editor.fontFamily": "JetBrainsMono Nerd Font",
  // "terminal.integrated.fontFamily": "Jetbrains Mono Nerd Font",

  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "editor.fontFamily": "Iosevka",
  "terminal.integrated.fontFamily": "Iosevka Term",

  "editor.fontLigatures": true,
  "terminal.integrated.fontLigatures.enabled": true,

  "workbench.activityBar.location": "top",

  // }}}

  // Editor {{{

  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",

  "editor.wordWrap": "on",
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "trailing",

  "window.commandCenter": false,
  "editor.minimap.enabled": false,
  "editor.guides.bracketPairs": true,

  "terminal.integrated.shellIntegration.decorationsEnabled": "overviewRuler",
  "terminal.integrated.defaultProfile.osx": "fish",

  // "errorLens.enabled": true,
  // "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  // "errorLens.removeLinebreaks": true,
  // "errorLens.replaceLinebreaksSymbol": " ‚èé ",

  // Editor }}}

  // Git {{{

  "git.blame.editorDecoration.enabled": true,

  // Git }}}

  // Languages {{{

  // C#
  "[csharp]": {
    "editor.formatOnType": true
  },
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
  "csharp.semanticHighlighting.enabled": true,
  "dotnet.backgroundAnalysis.compilerDiagnosticsScope": "fullSolution",
  "dotnet.automaticallyCreateSolutionInWorkspace": false,

  // Rust
  "[rust]": {
    // "editor.formatOnSave": true,
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.check.allTargets": true,
  "rust-analyzer.rustfmt.rangeFormatting.enable": true,

  // Go
  "[go]": {
    // "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "go.toolsManagement.autoUpdate": true,
  "gopls": {
    "formatting.gofumpt": false,
    "ui.semanticTokens": true,
    "ui.codelenses": {
      "test": true,
      "generate": true
    },
    "ui.diagnostic.staticcheck": true
  },

