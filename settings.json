    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "vscode_custom_css.statusbar": true,
  "vscode_custom_css.imports": [
    "file:///Users/jmederos/.config/vscode/vscode.css"
    // "https://gist.githubusercontent.com/jmederosalvarado/d53780b2f9c07230b382a17e9f9cef1a/raw/03bb2580340007da7a48941af2ed065ca624f334/vscode.css"
  ],

  // Customization }}}

  // Neovim {{{

  // "nvscode-neovim.neovimClean": true,
  "vscode-neovim.NVIM_APPNAME": "vscode",

  // Neovim }}}

  // Misc {{{

  "json.maxItemsComputed": 1000000000,
  "terminal.integrated.scrollback": 1000000000,

  // Misc }}}

  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // Copilot {{{

  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.codesearch.enabled": true,
  "extensions.ignoreRecommendations": true,

  // Copilot }}}

