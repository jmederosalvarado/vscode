{
  // General {{{

  "workbench.startupEditor": "welcomePageInEmptyWorkbench",

  // Fonts

  // "editor.fontSize": 13,
  // "terminal.integrated.fontSize": 13,
  // "editor.fontFamily": "JetBrainsMono Nerd Font",
  // "terminal.integrated.fontFamily": "Jetbrains Mono Nerd Font",

  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 14,

  "editor.lineHeight": 1.75,
  "editor.fontFamily": "Iosevka",
  "terminal.integrated.fontFamily": "Iosevka Term",
  "scm.inputFontFamily": "Iosevka",
  "chat.editor.fontFamily": "Iosevka",
  "debug.console.fontFamily": "Iosevka",
  "editor.codeLensFontFamily": "Iosevka",
  "notebook.output.fontFamily": "Iosevka",
  "markdown.preview.fontFamily": "Iosevka",
  "editor.inlayHints.fontFamily": "Iosevka",
  "editor.inlineSuggest.fontFamily": "Iosevka",

  "editor.fontLigatures": true,
  "terminal.integrated.fontLigatures.enabled": true,

  "workbench.activityBar.location": "top",

  // }}}

  // Editor {{{

  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",

  "editor.wordWrap": "on",
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "trailing",

  "editor.inlayHints.enabled": "offUnlessPressed",

  "window.commandCenter": false,
  "editor.minimap.enabled": false,
  "editor.guides.bracketPairs": true,

  "terminal.integrated.shellIntegration.decorationsEnabled": "overviewRuler",
  // "terminal.integrated.defaultProfile.osx": "fish",

  // "errorLens.enabled": true,
  // "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  // "errorLens.removeLinebreaks": true,
  // "errorLens.replaceLinebreaksSymbol": " ‚èé ",

  "editor.foldingImportsByDefault": true,

  // Editor }}}

  // Git {{{

  "git.blame.editorDecoration.enabled": true,

  // Git }}}

  // Languages {{{

  // C#
  "[csharp]": {
    "editor.formatOnType": true
  },
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
  "csharp.semanticHighlighting.enabled": true,
  "dotnet.backgroundAnalysis.compilerDiagnosticsScope": "fullSolution",
  "dotnet.automaticallyCreateSolutionInWorkspace": false,

  // Rust
  "[rust]": {
    // "editor.formatOnSave": true,
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.rustfmt.rangeFormatting.enable": true,
  "rust-analyzer.check.workspace": false,

  // Go
  "[go]": {
    // "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "go.toolsManagement.autoUpdate": true,
  "gopls": {
    "formatting.gofumpt": false,
    "ui.semanticTokens": true,
    "ui.codelenses": {
      "test": true,
      "generate": true
    },
    "ui.diagnostic.staticcheck": true
  },

  // Lua
  // "[lua]": {
  //   "editor.defaultFormatter": "JohnnyMorganz.stylua"
  // },

  // Others - Web and Misc.
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "vscode_custom_css.statusbar": true,
  "vscode_custom_css.imports": [
    "file:///Users/jmederos/.config/vscode/vscode.css"
